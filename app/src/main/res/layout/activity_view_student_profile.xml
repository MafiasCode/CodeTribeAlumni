<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- Parent activity meta-data to support 4.0 and lower-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.coelab.codetribealumni.ViewStudentProfileActivity"
        xmlns:tools="http://schemas.android.com/tools">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Personal Information"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:paddingLeft="15dp"
            android:textColor="#000000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="6dp">

            <EditText android:id="@+id/txtName"
                android:layout_marginRight="40dp"
                android:hint="Name"
                android:textSize="15dp"
                android:inputType="text"
                android:drawablePadding="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@android:color/black"
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <EditText android:id="@+id/txtSurname"
                android:layout_marginRight="40dp"
                android:hint="Surname"
                android:textSize="15dp"
                android:inputType="text"
                android:drawablePadding="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@android:color/black"
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <EditText android:id="@+id/txtGender"
                android:layout_marginRight="40dp"
                android:hint="Gender"
                android:inputType="textEmailAddress"
                android:drawablePadding="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="15dp"
                android:textColor="@android:color/black"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
            <!-- Parent activity meta-data to support 4.0 and lower
            <EditText android:id="@+id/txtID"
                android:layout_marginRight="40dp"
                android:hint="ID no"
                android:textSize="15dp"
                android:inputType="textEmailAddress"
                android:drawablePadding="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@android:color/black"
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <EditText android:id="@+id/txtAge"
                android:layout_marginRight="40dp"
                android:hint="Age"
                android:inputType="textEmailAddress"
                android:drawablePadding="10dp"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
                android:textColor="@android:color/black"
                android:layout_width="match_parent"
                android:layout_height="40dp" />-->


            <EditText android:id="@+id/txtContactdetails"
                android:layout_marginRight="40dp"
                android:hint="Contact no"
                android:drawablePadding="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="15dp"
                android:inputType="phone"
                android:textColor="@android:color/black"
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <EditText android:id="@+id/txtEmail"
                android:layout_marginRight="40dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:drawablePadding="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="15dp"
                android:textColor="@android:color/black"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
            <!-- Parent activity meta-data to support 4.0 and lower
             <EditText android:id="@+id/txtDisability"
                 android:layout_marginRight="40dp"
                 android:hint="Disability"
                 android:inputType="textEmailAddress"
                 android:drawablePadding="10dp"
                 android:textSize="15dp"
                 android:layout_marginLeft="10dp"
                 android:textColor="@android:color/black"
                 android:layout_width="match_parent"
                 android:layout_height="40dp" />

             <EditText android:id="@+id/txtCountry"
                 android:layout_marginRight="40dp"
                 android:hint="Country of birth"
                 android:drawablePadding="10dp"
                 android:layout_marginLeft="10dp"
                 android:inputType="phone"
                 android:textSize="15dp"
                 android:textColor="@android:color/black"
                 android:layout_width="match_parent"
                 android:layout_height="40dp" />-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Qualifications"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:paddingLeft="15dp"
                android:textColor="#000000"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/profile_list"
                    android:scrollbars="vertical">
                </ListView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
